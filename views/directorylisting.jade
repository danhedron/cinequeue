extends listing
block content
	p= __( '%s is a directory with the following contents:', path )
	form(action="/playlist/add/", method="POST")
		- count = 0
		ul.files
			for file in files
				li
					if !file.isDirectory
						input(type="checkbox", id="uri_"+count, name="uri_"+count, value=file)
						- pretty = file.toString().replace( /(\[.*?\]|[_])/g , '_' ).replace( /_+/g , ' ')
						- extn = pretty.match( /\.[a-z]+/g ).toString().substring( 1 )
						label(for="uri_"+count,title=file,class='extn-'+extn)= pretty
					else
						a(href=file)= file + '/'
				- count++
		button(type="submit") Queue Selected

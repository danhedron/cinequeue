doctype html
html
	head
		block head
			if title
				title= title
			else
				title= __( 'Cinequeue' )
			block scripts
			block styles
				link(rel="stylesheet",type="text/css",href="/global.css")
			meta(charset="utf-8")
	body
		block body
			div.container
				nav.sidebar
					ul
						li
							h1
								a(href="/")= __( 'Cinequeue' )
						li
							a(href="/playlist")= __( 'Playlist' )
						li
							a(href="/fs")= __( 'Filesystem' )
				div.content
					block top
						h1= __( 'Cinequeue' )
					block flash
						if messages
							div#messages
								if messages.err
									p.flash.err= messages.err
								if messages.warn
									p.flash.warn= messages.warn
								if messages.success
									p.flash.success= messages.success
								if messages.info
									p.flash.info= messages.info
					block content
				block footer
					div.footer
						p
							a(href='/')= __( 'Homepage' )
						p= __( 'Powered by node.js' )
						p
							a(href='/babel')= __( 'Language selection' )
